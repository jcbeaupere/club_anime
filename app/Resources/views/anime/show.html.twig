{% extends 'base.html.twig' %}

{% block body %}
    <h1>Anime</h1>

    <table>
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ anime.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ anime.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ anime.image }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>{{ anime.lien }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ anime.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('anime_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('anime_edit', { 'id': anime.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
