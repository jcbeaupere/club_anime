{% extends 'base.html.twig' %}

{% block body %}
    <h1>Evaluation</h1>

    <table>
        <tbody>
            <tr>
                <th>Note</th>
                <td>{{ evaluation.note }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ evaluation.commentaire }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ evaluation.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('evaluation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('evaluation_edit', { 'id': evaluation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
