<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Evaluation" table="evaluation">
    <unique-constraints>
      <unique-constraint name="iduser" columns="iduser"/>
      <unique-constraint name="idanime" columns="idanime"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="note" type="integer" column="note" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="commentaire" type="text" column="commentaire" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="iduser" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="iduser" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idanime" target-entity="Anime" fetch="LAZY">
      <join-columns>
        <join-column name="idanime" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
